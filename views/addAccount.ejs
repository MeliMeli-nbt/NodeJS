<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Boostrap v5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <!-- // -->
    <!-- Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <!-- // -->  
  <title>Document</title>
</head>
<body>
  <div class="container pt-5">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Username</th>
          <th scope="col">Password</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<data.length; i++) { %>
          <tr>
            <th scope="row"><%=data[i].account_id%></th>
            <td><%=data[i].username%></td>
            <td><%=data[i].password%></td>
            <td><%=data[i].email%></td>
            <td><%=data[i].role%></td>
            <td class="text-end text-dark">
              <!-- <a href="/editAccount/<%=data[i].account_id%>" class="pe-3 link-warning link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"><span class="bi bi-pencil"></span> Edit</a> -->
              <a href="/deleteAccount/<%=data[i].account_id%>" class="pe-3 link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"><span class="bi bi bi-person-dash-fill"></span> Delete</a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="container pt-5">
    <form action="/addAccount" method="post">
      <div class="row">
        <div class="col">
          <div class="mb-3">
            <label for="username" class="form-label">User Name</label>
            <input type="text" class="form-control" name="username" >
          </div>
        </div>
        <div class="col">
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="text" class="form-control" name="password">
          </div>
        </div>
        <div class="col">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email">
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-success">Add Emloyee</button>
    </form>
    <div class="container pt-5">
      <a href="/home" id="addEmployee" class="btn btn-warning">Back</a>
    </div>
</body>
</html>